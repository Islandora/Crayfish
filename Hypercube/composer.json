{
    "name": "islandora/hypercube",
    "description": "Tesseract as a web service",
    "type": "project",
    "require": {
        "silex/silex": "^2.0",
        "islandora/crayfish-commons": "dev-dev"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name": "Islandora Foundation",
            "email": "community@islandora.ca",
            "role": "Owner"
        },
        {
            "name": "Daniel Lamb",
            "email": "dlamb@islandora.ca",
            "role": "Maintainer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Islandora\\Hypercube\\": "src/"
        }
    },
    "scripts": {
        "check": [
            "phpcs --standard=PSR2 src tests",
            "phpcpd --names *.php src"
        ],
        "test": [
            "@check",
            "phpunit"
        ]
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.2"
        }
    },
    "require-dev": {
        "symfony/browser-kit": "^3.0",
        "symfony/css-selector": "^3.0",
        "phpunit/phpunit": "^5.0",
        "squizlabs/php_codesniffer": "^3.0",
        "sebastian/phpcpd": "^3.0"
    }
}
