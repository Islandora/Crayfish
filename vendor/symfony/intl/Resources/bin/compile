#!/usr/bin/env bash

if [[ $1 == force ]]; then
    docker pull jakzal/php-intl
fi;

docker run \
    -it --rm --name symfony-intl \
    -u $(id -u):$(id -g) \
    -v /tmp/symfony/icu:/tmp \
    -v $(pwd):/symfony \
    -w /symfony \
    jakzal/php-intl:latest \
    php src/Symfony/Component/Intl/Resources/bin/update-data.php
